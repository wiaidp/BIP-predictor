\definecolor{iwhdarkblue}{RGB}{36,43,132}
\definecolor{iwhmidblue}{RGB}{82,134,210}
\definecolor{iwhlightblue}{RGB}{246, 248, 253}
\definecolor{iwhdarkgray}{RGB}{40, 49, 60}
\definecolor{iwhmidgray}{RGB}{192, 199, 205}
\definecolor{iwhlightgray}{RGB}{241, 243, 245}


% headline colors and fonts
\setbeamercolor{headline}{fg=white,bg=white}
\setbeamercolor{title in headline}{fg=iwhdarkblue}
\setbeamercolor{author in headline}{fg=iwhdarkblue}
\setbeamercolor{institute in headline}{fg=iwhdarkblue}
\setbeamercolor{logo in headline}{fg=black,bg=iwhlightblue}
\setbeamercolor{separation line}{bg=white}

% footline colors and fonts
\setbeamercolor{footline}{fg=iwhdarkblue,bg=iwhlightblue}
%\setbeamerfont{footline}{size=\normalsize}

% body colors and fonts
\setbeamercolor*{normal text}{fg=white,bg=white}

% block environment
\setbeamercolor*{block body}{bg=iwhlightblue,fg=black}
\setbeamercolor*{block title}{fg=white,bg=iwhmidblue}
\setbeamerfont{block title}{size=\large,series=\bf}

% example environment
\setbeamercolor*{example title}{fg=white,bg=iwhmidblue}
\setbeamerfont{example title}{size=\Large,series=\bf}


\setbeamertemplate{itemize items}[triangle]
\setbeamertemplate{navigation symbols}{}  % no navigation on a poster

